@model graduation_project_final.Models.project
@{
    ViewBag.Title = "ideas";
    Layout = "~/Views/Shared/_layoutDoctor.cshtml";
}

@section panner_image{
    <section class="slider">
        <div class="content">
            <h1>Ideas Under Control</h1>
            <p>Edit Your Idea</p>
        </div>
    </section>

    <div class="ideas">

        <div class="container-fluid">
            <div class="search-and-insrt row">
                <div class="search col-8">
                    <div class=" con-block ">
                        <div class="relative">
                            <input type="text" class="" placeholder="Search ideas...">
                            <a href="#" class="link" id="link">Search</a>
                        </div>
                    </div>
                </div>

                <div class="insert col-2">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#insert">Create New Idea</a>

                </div>
            </div>
        </div>


        <div class="all-blocks">
            @foreach (var item in ViewBag.ideas)
            {
                <div class="card">
                    <div class="name-of-idea">
                        <span>Name Of Idea :</span>
                        <span>@item.name</span>
                    </div>

                    <div class="description-of-idea">
                        <span>Description Of Idea :</span>
                        <span>
                           @item.description

                        </span>
                    </div>

                    <div class="btn-request">
                        <a href=@Url.Action("edit_idea","Doctor",new {id= item.id_project }) class="btn">Update</a>
                        <a href=@Url.Action("delete_idea","Doctor",new {id= item.id_project }) class="btn">Delete</a>

                        
                    </div>
                    
                </div>
            }
        </div>
            





    <div class="modal" id="insert">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Add New Idea</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form action="add_idea" method="post" enctype="multipart/form-data">
                        <label for="">Idea Name :</label><br>
                        @Html.TextBoxFor(n => n.name, new { required = "required" })
                        <br><br>
                        <label for="">Idea Description :</label><br>
                        @Html.TextAreaFor(n => n.description, new { required = "required" })
                        <input type="submit" value="Save Idea">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="update">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Edit About Idea</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form action="#">
                        <label for="">Idea Name :</label><br>
                        <input type="text" id="" name="" value="" required><br><br>
                        <label for="">Idea Description :</label><br>
                        <textarea></textarea>
                        <input type="submit" value="Save Idea">
                    </form>
                </div>
            </div>
        </div>
    </div>


}


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/Content/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/webfont/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/css/he-fo.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="containers">
        <div class="navigations">
            <ul>
                <li>
                    <a href="Student/Admin_of_student">

                        <h2 class="title">Admin Page</h2>
                    </a>
                </li>
                <li>
                    <a href=@Url.Action("Admin_of_student","Admin")>
                        <span class="icon">

                            <i class="fas fa-user-graduate cc"></i>
                        </span>
                        <span class="title">Student</span>
                    </a>
                </li>
                <li>
                    <a href=@Url.Action("Admin_of_doctor","Admin")>
                        <span class="icon">

                            <i class="fas fa-chalkboard-teacher cc"></i>
                        </span>
                        <span class="title">Doctor</span>
                    </a>
                </li>
                <li>
                    <a href=@Url.Action("Admin_of_company","Admin")>
                        <span class="icon">

                            <i class="fas fa-building cc"></i>
                        </span>
                        <span class="title">Company</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <i class="fas fa-tasks cc"></i>
                        </span>
                        <span class="title">Previous Project</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <i class="fas fa-cog cc"></i>
                        </span>
                        <span class="title">Settings</span>
                    </a>
                </li>




            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">


            <!-- ======================= Cards ================== -->
            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">1,504</div>
                        <div class="cardName">Doctors</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">80</div>
                        <div class="cardName">Students</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">284</div>
                        <div class="cardName">Company</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">7,842</div>
                        <div class="cardName">Previous-projects</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>
                </div>
            </div>

            <!-- ================ Order Details List ================= -->
            <div class="details" id="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <div class="topbar">


                            <div class="search">
                                <label>
                                    <input type="text" placeholder="Search here">
                                    <ion-icon name="search-outline"></ion-icon>
                                </label>
                            </div>

                            <a href="" class="btn" data-bs-toggle="modal" data-bs-target="#for-add-student">@ViewBag.type</a>
                        </div>



                    </div>

                    <table>
                        <thead>
                            <tr>
                                <td>Email</td>
                                <td>Password</td>
                                <td>status</td>
                            </tr>
                        </thead>
                        <tbody>
                            @RenderSection("view_data", false)
                        </tbody>
                    </table>
                </div>

                <!-- ================= New Customers ================ -->
                <!-- ================= New Customers ================ -->

            </div>
        </div>
    </div>
    @*this form showed when you want to go to add data*@

    @RenderSection("adding_item", false)

    @*this form get it when you want to update  data *@

    @RenderSection("update_item", false)



    <!-- =========== Scripts =========  -->
    <script src="/Content/js/jQuery3.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="/Content/owl/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    <script src="/Content/public/css/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/public/webfont/fontawesome/js/all.min.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>
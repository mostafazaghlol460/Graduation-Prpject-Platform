@model graduation_project_final.Models.user
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign in</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/Content/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/webfont/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/css/he-fo.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<!--بسم الله الرحمن الرحيم -->

<body>

    <!--sign up image -->
    <section class="signin">
        <div class="container-fluid">
            <div class="row">
                <div class="col-5">

                    <div class="img">
                        <img src="/Content/img/sign in.jpg" alt="image for sign up">
                    </div>
                </div>

                <div class="col-7">
                    <div class="block">
                        <div class="content">
                            <h3>Login</h3>
                            <span>Welcome back! Log in to your account.</span>
                            <form method="post">

                                <div class="mb-3 mt-3">
                                    <label for="email" class="form-label">Email Address:</label>
                                    @Html.TextBoxFor(n => n.email, new { @class = "form-control", placeholder = "Enter your email" })
                                    @Html.ValidationMessageFor(n => n.email, null, new { @class = "text-danger" })
                                </div>

                                <div class="mb-3 inputbox">
                                    <label for="pwd" class="form-label">Password:</label>
                                    @Html.PasswordFor(n=>n.password,new { @class = "col-12", placeholder = "Enter your password" })
                                    @Html.ValidationMessageFor(n => n.password, null, new { @class = "text-danger" })

                                </div>
                                <h6 class="text-danger">@ViewBag.stutas</h6>
                                <div class="form-check mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="remember"> Remember me
                                    </label>
                                    <div class="forget">
                                        <a href="">Forgot password?</a>
                                    </div>

                                </div>
                                <input type="submit" class="btn  btn-block" style="background-color: var(--pop-color); color: white;" name="SIGN IN">
                                <div class="have-account row">
                                    <p class="col-8">Are You Want To Back To Home?</p> <a class="col-4" href="">Back To Home</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/Content/js/jQuery3.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="/Content/owl/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    <script src="/Content/public/css/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/public/webfont/fontawesome/js/all.min.js"></script>
</body>

</html>

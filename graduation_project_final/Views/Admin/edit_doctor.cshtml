@model graduation_project_final.Models.user

@{
    ViewBag.Title = "Admin_edit";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/Content/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/webfont/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/css/he-fo.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<body>


    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">UPDATE Doctor INfo</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form method="post" action=@Url.Action("update_doctor","Admin")>
                    @Html.HiddenFor(n => n.id_user)

                    @Html.LabelFor(n => n.email)
                    @Html.TextBoxFor(n => n.email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.email, null, new { @class = "text-danger" })

                    @Html.LabelFor(n => n.password)
                    @Html.TextBoxFor(n => n.password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.password, null, new { @class = "text-danger" })<br><br>
                    @Html.LabelFor(n => n.role)
                    @Html.TextBoxFor(n => n.role, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.role, null, new { @class = "text-danger" })
                    @*<label for="">Email of Student :</label><br>
                        <input type="email" id="" name="" value="" required><br><br>

                        <label for="">Password of Student:</label><br>
                        <input type="password" id="" name="" value="" required><br><br>*@
                    <input type="submit" value="UPDATE Now">
                </form>
            </div>
        </div>
    </div>
    <script src="/Content/js/jQuery3.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="/Content/owl/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    <script src="/Content/public/css/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/public/webfont/fontawesome/js/all.min.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>

</html>

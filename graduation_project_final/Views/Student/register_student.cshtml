@model graduation_project_final.Models.Register_st
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>data for start</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/Content/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/webfont/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/css/he-fo.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<body>

    <section class="start-filed-StuInfo">

        <div class="img">
            <img src="/Content/img/a.svg" />
        </div>

        <div class="data-block">
            <div class="title">
                <h1>Get Started</h1>
                <p>Fill Your Personal Information</p>
            </div>
            <form method="post" enctype="multipart/form-data">
                @Html.HiddenFor(n => n.user_student.id_user)
                @Html.HiddenFor(n => n.user_student.email)
                @Html.HiddenFor(n => n.user_student.role)



                <div class="mb-3 mt-3">
                    <label for="pwd" class="form-label">Upload Your Image:</label>
                    <input type="file" class="form-control " placeholder="upload your image" name="image">
                </div>
                <div class="mb-3 mt-3">
                    @Html.TextBoxFor(n => n.user_student.name, new { @class = "form-control", placeholder = "Enter name" })
                    @Html.ValidationMessageFor(n => n.user_student.name, null, new { @class = "text-danger" })

                </div>


                <div class="mb-3 mt-3">
                    @Html.TextBoxFor(n => n.user_student.phone, new { @class = "form-control", placeholder = "Enter your phone" })
                    @Html.ValidationMessageFor(n => n.user_student.phone, null, new { @class = "text-danger" })
                </div>


                <div class="mb-3">
                    @Html.PasswordFor(n => n.user_student.password, new { @class = "form-control", placeholder = "Enter your password" })
                    @Html.ValidationMessageFor(n => n.user_student.password, null, new { @class = "text-danger" })

                </div>
                <div class="mb-3 mt-3">
                    @Html.TextBoxFor(n => n.user_organization.education, new { @class = "form-control", placeholder = "Enter your education" })
                    @Html.ValidationMessageFor(n => n.user_organization.education, null, new { @class = "text-danger" })
                </div>
                <div class="field_wrapper mb-3 mt-3">

                    <input type="text" class="form-control" placeholder="Enter your skills" name="field_name[]"
                           value="">
                    <a href="javascript:void(0);" class="add_button" title="Add field"><i class="fas fa-plus"></i></a>
                </div>

                <div class="labels">
                    <label class="radio-inline"><input type="radio" name="optradio" value="Have Team">Have Team</label>
                    <label class="radio-inline"><input type="radio" name="optradio" value="NO Team">NO Team</label>

                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>

        </div>
    </section>


    <script src="/Content/js/jQuery3.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="/Content/owl/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    <script src="/Content/public/css/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/public/webfont/fontawesome/js/all.min.js"></script>
</body>

</html>
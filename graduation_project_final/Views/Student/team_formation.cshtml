@model List<graduation_project_final.Models.user>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign in</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/Content/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/webfont/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/css/he-fo.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<!--بسم الله الرحمن الرحيم -->

<body>

    <!--sign up image -->
    <section class="team-formattion">
        <div class="container-fluid">
            <div class="header">
                <div class="first-title">
                    <h2>Start Choose Your Team</h2>
                </div>

                <div class="search-and-suggest row">
                    <div class="search ">
                        <div class=" con-block ">
                            <div class="relative">
                                <input type="text" class="" placeholder="Search By Name Of Student...">
                                <a href="#" class="link" id="link">Search</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-4">
                        <div class="one-card">
                            <div class="card-imgs">

                            </div>


                            <div class="content">
                                <div class="person-img">
                                    <img src="~/picture/@item.image" alt="image">
                                </div>
                                <div class="title">
                                    <h3>@item.name</h3>
                                </div>
                                <div class="jop">
                                    <span>@item.phone</span>
                                    
                                </div>
                                <div class="description">
                                    <p>

                                        @foreach (var item1 in ViewBag.cv)
                                        {
                                            if(item.id_user == item1.id_user)
                                            {
                                                @item1.skills

                                            }



                                        }

                                    </p>
                                </div>

                                <hr>
                                <div class="contact">
                                    <a href="#" class="btn">Start Chat</a>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>



    </section>

    <script src="/Content/js/jQuery3.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="/Content/owl/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    <script src="/Content/public/css/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/public/webfont/fontawesome/js/all.min.js"></script>
</body>

</html>
@model graduation_project_final.Models.Req_student
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Idea-Details-doctor</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/Content/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/webfont/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/css/he-fo.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<!--بسم الله الرحمن الرحيم -->

<body>

    <!--sign up image -->
    <section class="detail">
        <div class="block">
            <div class="name-of-idea">
                <span>Name Of Idea :</span>
                <span>@Model.project_show.name</span>
            </div>
            <div class="type-of-idea">
                <span>Type Of Idea :</span>
                <span>@Model.project_show.type</span>
            </div>
            <div class="description-of-idea">
                <span>Description Of Idea :</span>
                <span>
                    @Model.project_show.description
                </span>
            </div>
            <div class="btn-request">
                <a href="#" class="btn" data-bs-toggle="modal" data-bs-target="#idea-for-doctor">Send Request</a>
            </div>
            <div class="exit ">
                <a href="#">Back To Home</a>
            </div>
        </div>
    </section>
    <div class="modal" id="idea-for-doctor">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Suggest New Idea For Doctor</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form method="post" enctype="multipart/form-data">
                        <label for="">Idea Name :</label><br>
                        @Html.TextBoxFor(n => n.project_show.name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.project_show.name, null, new { @class = "text-danger" })
                        <br><br>


                        <label for="">Email of Doctor :</label><br>
                        @Html.DropDownListFor(n => n.request1.id_prof, (SelectList)ViewBag.cat, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.request1.id_prof, null, new { @class = "text-danger" })
                        <br><br>

                        <label for="">Code Of Team :</label><br>
                        @Html.TextBoxFor(n => n.request1.group_code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.request1.group_code, null, new { @class = "text-danger" })


                        <input type="submit" value="Send Request">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/Content/js/jQuery3.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="/Content/owl/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    <script src="/Content/public/css/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Content/public/webfont/fontawesome/js/all.min.js"></script>
</body>

</html>
